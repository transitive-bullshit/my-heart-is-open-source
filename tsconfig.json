{
  "extends": "@fisch0920/config/tsconfig-react",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/public/*": ["public/*"],
      "@/convex/*": ["convex/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "convex/*.ts",
    "*.config.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "postcss.config.mjs"
  ],

  "exclude": ["node_modules"]
}
